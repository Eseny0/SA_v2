/*-----QWidget-----*/
QWidget
{
	background-color: #f2f2f2;
	color: #333333;
	border-color: #cccccc;
}


/*-----QLabel-----*/
QLabel
{
	background-color: transparent;
	color: #555555;
}


QLabel::disabled
{
	background-color: transparent;
	color: #aaaaaa;
}


/*-----QMenuBar-----*/
QMenuBar
{
	background-color: #ffffff;
	color: #333333;
	border-color: #cccccc;
}


QMenuBar::disabled
{
	background-color: #e6e6e6;
	color: #999999;
	border-color: #cccccc;
}


QMenuBar::item
{
    background-color: transparent;
}


QMenuBar::item:selected
{
    background-color: #e6f7ff;
    border: 1px solid #80d4ff;
}


QMenuBar::item:pressed
{
    background-color: #b3e5ff;
    border: 1px solid #66c2ff;
    margin-bottom: -1px;
    padding-bottom: 1px;
}


/*-----QMenu-----*/
QMenu
{
    background-color: #ffffff;
    border: 1px solid #cccccc;
    color: #333333;
}


QMenu::separator
{
    height: 1px;
    background-color: #b3e5ff;
    color: #333333;
    padding-left: 4px;
    margin-left: 10px;
    margin-right: 5px;
}


QMenu::item
{
    min-width: 150px;
    padding: 5px 20px;
}


QMenu::item:selected
{
    background-color: #e6f7ff;
    color: #333333;
}


QMenu::item:disabled
{
    color: #cccccc;
}


/*-----QToolTip-----*/
QToolTip
{
	border: 1px solid #cccccc;
	background-color: #ffffff;
	color: #333333;
	border-color: #cccccc;
}


/*-----QPushButton-----*/
QPushButton
{
	background-color: #80d4ff;
	color: #ffffff;
	border-style: solid;
	border-width: 1px;
	border-radius: 4px;
	border-color: #66c2ff;
	padding: 6px;
}


QPushButton::disabled
{
	background-color: #e6e6e6;
	color: #999999;
	border-color: #cccccc;
}


QPushButton::hover
{
	background-color: #99e0ff;
	color: #ffffff;
	border-style: solid;
	border-width: 1px;
	border-radius: 4px;
	border-color: #80d4ff;
	padding: 6px;
}


QPushButton::pressed
{
	background-color: #66c2ff;
	color: #ffffff;
	border-style: solid;
	border-width: 1px;
	border-radius: 4px;
	border-color: #4da3e5;
	padding: 6px;
}



/*-----QToolButton-----*/
QToolButton
{
	background-color: #607cff;
	color: #ffffff;
	border-width: 1px;
	border-radius: 3px;
	border-color: #051a39;
	padding: 3px;

}


/*-----QToolButton-----*/
QToolButton::disabled
{
	background-color: #e6e6e6;
	color: #999999;
	border-color: #cccccc;
}

QToolButton::hover
{
	background-color: #80d4ff;
	color: #ffffff;
	border-width: 1px;
	border-radius: 5px;
	border-color: #66c2ff;
	padding: 3px;
}

QToolButton::pressed
{
	background-color: #66c2ff;
	color: #ffffff;
	border-width: 1px;
	border-radius: 5px;
	border-color: #4da3e5;
	padding: 3px;
}


/*-----QComboBox-----*/
QComboBox
{
    background-color: #f2f2f2;
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding-left: 8px;
    color: #333333;
    height: 25px;
}

QComboBox::disabled
{
	background-color: #e6e6e6;
	color: #999999;
	border-color: #cccccc;
}

QComboBox:hover
{
    background-color: #e6f7ff;
}

QComboBox:on
{
    background-color: #66c2ff;
}

QComboBox QAbstractItemView
{
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #cccccc;
    selection-background-color: #66c2ff;
    selection-color: #ffffff;
    outline: 0;
}

QComboBox::drop-down
{
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    border-left-width: 0px;
    border-left-color: darkgray;
    border-left-style: solid;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

QComboBox::down-arrow
{
    image: url(styles/img/arrow-down.png);
    width: 8px;
    height: 8px;
}


/*-----QSpinBox & QDoubleSpinBox & QDateTimeEdit-----*/
QSpinBox,
QDoubleSpinBox,
QDateTimeEdit
{
	background-color: #f2f2f2;
	color: #333333;
	border: 1px solid #cccccc;
	border-radius: 4px;
	padding: 3px;
}

QSpinBox::disabled,
QDoubleSpinBox::disabled,
QDateTimeEdit::disabled
{
	background-color: #e6e6e6;
	color: #999999;
	border-color: #cccccc;
}

QSpinBox:hover,
QDoubleSpinBox::hover,
QDateTimeEdit::hover
{
    background-color: #e6f7ff;
    border: 1px solid #66c2ff;
    color:  #333333;
    padding: 3px;
}

QSpinBox::up-button, QSpinBox::down-button,
QDoubleSpinBox::up-button, QDoubleSpinBox::down-button,
QDateTimeEdit::up-button, QDateTimeEdit::down-button
{
    background-color: #66c2ff;
	border-radius: 3px;
}

QSpinBox::up-button:hover, QSpinBox::down-button:hover,
QDoubleSpinBox::up-button:hover, QDoubleSpinBox::down-button:hover,
QDateTimeEdit::up-button:hover, QDateTimeEdit::down-button:hover
{
    background-color: #80d4ff;
    border: 1px solid #80d4ff;
}

QSpinBox::up-button:disabled, QSpinBox::down-button:disabled,
QDoubleSpinBox::up-button:disabled, QDoubleSpinBox::down-button:disabled,
QDateTimeEdit::up-button:disabled, QDateTimeEdit::down-button:disabled
{
	background-color: #e6e6e6;
	color: #999999;
	border-color: #cccccc;
}

QSpinBox::up-button:pressed, QSpinBox::down-button:pressed,
QDoubleSpinBox::up-button:pressed, QDoubleSpinBox::down-button:pressed,
QDateTimeEdit::up-button:pressed, QDateTimeEdit::down-button:pressed
{
    background-color: #4da3e5;
    border: 1px solid #4da3e5;
}

QSpinBox::down-arrow,
QDoubleSpinBox::down-arrow,
QDateTimeEdit::down-arrow
{
    image: url(styles/img/arrow-down.png);
    width: 8px;
}

QSpinBox::up-arrow,
QDoubleSpinBox::up-arrow,
QDateTimeEdit::up-arrow
{
    image: url(styles/img/arrow-up.png);
    width: 8px;
}

