/*-----QLineEdit-----*/
QLineEdit {
    background-color: #3a3a3a;
    color: #e0e0e0;
    border: 1px solid #2a2a2a;
    border-radius: 5px;
    padding: 6px;
}

QLineEdit::disabled {
    background-color: #2e2e2e;
    color: #7d7d7d;
    border: 1px solid #2a2a2a;
    padding: 6px;
}

/*-----QTextEdit-----*/
QTextEdit {
    background-color: #f4f4f4;
    color: #121212;
    border: 1px solid #2a2a2a;
    border-radius: 5px;
    padding: 8px;
}

QTextEdit::disabled {
    background-color: #2e2e2e;
    color: #7d7d7d;
    border: 1px solid #2a2a2a;
}

/*-----QGroupBox-----*/
QGroupBox {
    border: 1px solid #607cff;
    margin-top: 20px;
    border-radius: 5px;
}

QGroupBox::title {
    background-color: #607cff;
    color: #ffffff;
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 6px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

QGroupBox::title::disabled {
    background-color: #404040;
    color: #656565;
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 6px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

/*-----QCheckBox-----*/
QCheckBox::indicator {
    background-color: #323232;
    border: 1px solid #b1b1b1;
    width: 14px;
    height: 14px;
}

QCheckBox::indicator:checked {
    image: url(styles/img/checkbox-checked.png);
    border: 1px solid #607cff;
}

QCheckBox::indicator:unchecked:hover {
    border: 1px solid #607cff;
}

QCheckBox::disabled {
    color: #656565;
}

QCheckBox::indicator:disabled {
    background-color: #656565;
    color: #656565;
    border: 1px solid #656565;
}

/*-----QRadioButton-----*/
QRadioButton::indicator::unchecked {
    border: 2px solid gray;
    border-radius: 50%;
    background-color: #fff;
    width: 12px;
    height: 12px;
}

QRadioButton::indicator::unchecked:hover {
    border: 2px solid #607cff;
    background-color: #fff;
}

QRadioButton::indicator::checked {
    border: 2px solid darkgray;
    border-radius: 50%;
    background-color: #4969ff;
    width: 12px;
    height: 12px;
}

QRadioButton::disabled {
    color: #656565;
}

QRadioButton::indicator:disabled {
    background-color: #656565;
    color: #656565;
    border: 2px solid #656565;
}

/*-----QTableView & QTableWidget-----*/
QTableView {
    background-color: #292929;
    border: 1px solid #444444;
    color: #f0f0f0;
    gridline-color: #8faaff;
    outline: none;
}

QTableView::disabled {
    background-color: #292929;
    border: 1px solid #444444;
    color: #656565;
    gridline-color: #656565;
    outline: none;
}

QTableView::item:hover {
    background-color: #2c2c5a;
    color: #f0f0f0;
}

QTableView::item:selected {
    background-color: #1a1b1c;
    border: 2px solid #607cff;
    color: #f0f0f0;
}

QTableView::item:selected:disabled {
    background-color: #1a1b1c;
    border: 2px solid #525251;
    color: #656565;
}

QTableCornerButton::section {
    background-color: #505050;
    color: #fff;
}

QHeaderView::section {
    background-color: #525251;
    color: #fff;
    text-align: left;
    padding: 6px;
}

QHeaderView::section:disabled {
    background-color: #525251;
    color: #656565;
}

