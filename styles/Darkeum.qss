/*----- QHeaderView -----*/
QHeaderView::section:checked {
    color: #ffffff;
    background-color: #3b56d6;  /* Slightly lighter for contrast */
}

QHeaderView::section:checked:disabled {
    color: #888888;  /* Lighter gray for disabled state */
    background-color: #505050;
}

QHeaderView::section::vertical::first,
QHeaderView::section::vertical::only-one,
QHeaderView::section::horizontal::first,
QHeaderView::section::horizontal::only-one {
    border: 1px solid #2f3535;  /* Darker border for a subtle effect */
}

/*----- QTabWidget -----*/
QTabBar::tab {
    background-color: #1c1c1c;  /* Slightly darker to distinguish tabs */
    color: #ffffff;
    border-radius: 4px;
    border: 1px solid #3e4e63;
    padding: 6px;
}

QTabBar::tab:disabled {
    background-color: #444444;
    color: #888888;
}

QTabWidget::pane {
    background-color: #2c2c2c;  /* Darker background to separate the content */
    border: 1px solid #3e4e63;
}

QTabBar::tab:selected {
    background-color: #4959e6;  /* Lighter blue for selected tab */
    color: #ffffff;
    border-color: #3e4e63;
}

QTabBar::tab:selected:disabled {
    background-color: #555555;
    color: #888888;
}

/*----- QSlider -----*/
QSlider::groove:horizontal,
QSlider::groove:vertical {
    background-color: transparent;
    height: 6px;
    border-radius: 3px;
}

QSlider::sub-page:horizontal,
QSlider::sub-page:vertical {
    background-color: #4959e6;
}

QSlider::add-page:horizontal,
QSlider::add-page:vertical {
    background-color: #999999;
}

QSlider::handle:horizontal,
QSlider::handle:vertical {
    background-color: #4959e6;
    width: 14px;
    border-radius: 7px;
    margin-top: -6px;
}

QSlider::handle:horizontal:hover,
QSlider::handle:vertical:hover {
    background-color: #3a4bb0;
}

QSlider::handle:horizontal:disabled,
QSlider::handle:vertical:disabled {
    background-color: #aaaaaa;
    border: 1px solid #777777;
}

/*----- QDial -----*/
QDial {
    background-color: #4959e6;  /* Soft blue for consistency */
}

QDial::disabled {
    background-color: #404040;
}

/*----- QScrollBar -----*/
QScrollBar:horizontal,
QScrollBar:vertical {
    background-color: #3d3d3d;
    border: 1px solid #2b2b2b;
    width: 12px;
    height: 12px;
    margin: 10px;
}

QScrollBar::handle:horizontal,
QScrollBar::handle:vertical {
    background-color: #4959e6;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal,
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    border: 1px solid #3e4e63;
    background-color: #4959e6;
    width: 14px;
    height: 14px;
}

QScrollBar::right-arrow:horizontal,
QScrollBar::left-arrow:horizontal,
QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical {
    width: 6px;
    height: 6px;
    background: none;
}

/*----- QProgressBar -----*/
QProgressBar {
    background-color: #2c2c2c;
    color: #ffffff;
    border: 1px solid #4959e6;
    border-radius: 4px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #4959e6;
}

QProgressBar::chunk:disabled {
    background-color: #777777;
}

/*----- QStatusBar -----*/
QStatusBar {
    background-color: #1a1a1a;
    color: #ffffff;
    border: none;
}



